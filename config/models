User
    ident Text
    password Text Maybe
    isAdmin Bool
    isAccountAdmin Bool
    account AccountId Maybe
    UniqueUser ident

Email
    email Text
    user UserId Maybe
    verkey Text Maybe
    UniqueEmail email

Account
    name Text
    UniqueAccount name

Report
    account   AccountId
    csv  FilePath

Player
    name Text
    nick Text
    email Text Maybe
    phone Text Maybe
    note Textarea Maybe
    minutes Int 
    minutesTotal Int 
    inSession Bool
    account AccountId
    points Double
    pointsTotal Double
    deriving Show Eq

Table
    name Text
    game Text 
    pointsHour Double
    seats Int 
    description Text Maybe
    account AccountId
    deriving Show Eq

GamingSession
    start UTCTime
    end UTCTime Maybe
    player PlayerId
    table TableId
    seat Int Maybe
    deriving Show Eq

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)

